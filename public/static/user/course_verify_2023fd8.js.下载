var CourseVerify={};CourseVerify.isLogin=function(){var o=$(".source_addr").val(),e=$("#login").val(),n=$("#bought").val(),l=$(".page_state").val();if("web"==l)if(e&&0!=e)1==e&&(n&&0!=n||("live"==o?($("#countdown_explain").show(),CourseVerify.getExplainCountDown()):"lesson"==o&&($("#countdown_explain").show(),CourseVerify.getExplainCountDown())));else{var t=$("#courseId").val();if("course"==o)window.location.href="/account/login.html?path=course&rFrom=4";else if("live"==o){var r=window.location.href,a=getLessonId(r);window.location.href="/account/login.html?path=live&courseId="+t+"&lessonId="+a+"&rFrom=6"}else if("newlive"==o){var r=window.location.href,a=getLessonId(r);window.location.href="/account/login.html?path=newlive&courseId="+t+"&lessonId="+a+"&rFrom=6"}else"lesson"==o&&(window.location.href="/account/login.html?path=lesson&courseId="+t+"&rFrom=6")}else if("wap"==l)if(e&&0!=e)1==e&&(n&&0!=n||("live"==o?($("#countdown_explain").show(),CourseVerify.getExplainCountDown()):"lesson"==o&&($("#countdown_explain").show(),CourseVerify.getExplainCountDown())));else{var t=$("#courseId").val();if("course"==o)window.location.href="/account/login.html?path=course&rFrom=4";else if("live"==o){var r=window.location.href,a=getLessonId(r);window.location.href="/account/login.html?path=live&courseId="+t+"&lessonId="+a+"&rFrom=6"}else"lesson"==o&&(window.location.href="/account/login.html?path=lesson&courseId="+t+"&rFrom=6")}},CourseVerify.isMycoursePath=function(){var o=getUrlParam("path"),e=$(".page_state").val();"course"==o?"web"==e?window.location.href="/account/login.html?rFrom=4":"wap"==e&&($(".back_btn").off("click"),$(".j-touch").attr({href:"/course/list/0/1.html"}),$(".explain_state").html("登录"),$(".explain_addr").html("请登录后进入我的课程"),$("#countdown_explain").show(),CourseVerify.getExplainCountDown()):"live"==o?"web"==e?window.location.href="/account/login.html?rFrom=6":"wap"==e&&($(".back_btn").off("click"),$(".j-touch").attr({href:"/course/detail-"+getUrlParam("courseId")+".html?path=live"})):"lesson"==o&&("web"==e?window.location.href="/account/login.html?rFrom=6":"wap"==e&&($(".back_btn").off("click"),$(".j-touch").attr({href:"/course/detail-"+getUrlParam("courseId")+".html?path=live"})))},CourseVerify.getExplainCountDown=function(){var o=3,e=getUrlParam("path"),n=$(".source_addr").val(),l=setInterval(function(){o--,1>o?(e?"course"==e?$("#countdown_explain").hide():("live"==e||"lesson"==e)&&(window.location.href="/course/detail-"+$("#courseId").val()+".html"):("live"==n||"lesson"==n)&&(window.location.href="/course/detail-"+$("#courseId").val()+".html"),clearInterval(l)):$(".explain_time").html(o)},1e3)};